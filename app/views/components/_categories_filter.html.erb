<section class="c-categories-filter">
  <header class="c-categories-filter__header">
    <h2 class="t-heading t-heading--md">
      Filter by category
    </h2>
    <span class="t-text t-text--bold">
      <%= pluralize(categories.length + 1, "item") %>
    </span>
  </header>
  <div class="c-categories-filter__content c-card">
    <div class="u-scroll-viewport">
      <ul class="c-categories-filter__list u-scroll-content">
        <li>
          <%= render "components/filter_item",
            title: "All categories",
            route: money_transactions_path,
            custom_img: { text: "all" },
            image: nil,
            active: selectedCategory ? false : true
          %>
        </li>
        <% categories.each do |category| %>
          <li>
            <%= render "components/filter_item",
              title: category.name,
              route: category_money_transactions_path(category),
              custom_img: nil,
              image: {
                file: category.image,
                alt: "category icon",
                placeholder: "category_placeholder.png"
              },
              active: selectedCategory ? selectedCategory.id == category.id : false
            %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>